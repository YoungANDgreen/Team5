{{#each reviews as |review|}}
  <div class='card'>
    <div class='card-header'>
      <h4>{{review.title}}</h4>
      <p>Posted by
        {{user.name}}
        on
        {{format_date review.date_created}}, reviewing
        {{restaurant.local}}</p>
    </div>
    <div class='card-body'>
      <p>{{review.description}}</p>
      <p>Service: {{review.service}}</p>
      <p>Taste: {{review.taste}}</p>
      <p>Quality: {{review.quality}}</p>
    </div>
  </div>
{{/each}}