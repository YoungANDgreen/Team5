<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Add a new restaurant:</h3>

    <form class='form new-project-form'>
      <div class='form-group'>
        <label for='project-name'>Restaurant name:</label>
        <input
          class='form-input'
          type='text'
          id='project-name'
          name='project-name'
        />
      </div>
      <div class='form-group'>
        <label for='project-funding'>Address:</label>
        <input
          class='form-input'
          type='text'
          id='project-funding'
          name='project-funding'
        />
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

  <div class="col-md-6 project-list">
    <h3>All Restaurants</h3>

    {{#each restaurants as |restaurant|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{restaurant.id}}">{{restaurant.local}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{restaurant.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>
</div>

