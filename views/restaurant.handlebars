<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Add a new restaurant:</h3>

    <form class='form new-project-form'>
      <div class='form-group'>
        <label for='restaurant-name'>Restaurant name:</label>
        <input
          class='form-input'
          type='text'
          id='restaurant-name'
          name='restaurant-name'
        />
      </div>
      <div class='form-group'>
        <label for='restaurant-address'>Address:</label>
        <input
          class='form-input'
          type='text'
          id='restaurant-address'
          name='restaurant-address'
        />
      </div>
      <div class='newRes'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

  <div class="col-md-6 project-list">
    <h3>All Restaurants</h3>

    {{#each restaurants as |restaurant|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{restaurant.local}}</h4>
        <p>{{restaurant.address}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{restaurant.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>
</div>
      <script src='/js/newRestaurant.js'></script>
