<div class=''>
  <div class=''>
    <h2>Welcome, {{name}}!</h2>
    {{!-- {{#each restaurant as |restaurant|}} --}}
    <p>This is the location's address {{address}}</p>
    {{!-- {{/each}} --}}
  </div>
  {{#each review as |review|}}
    <div class='dish col-md-5'>
      <p>
        {{review.id}}
        {{review.name}}
      </p>
    </div>
  {{/each}}
  <div class='dropdownMenus col-md-12'>
    <div class='form-field'>
      <label for='restaurantFilter'>Restaurant</label>
      <select id='restaurantFilter' class='form-control'>
        <option>Choose restaurant</option>
        {{#each restaurants as |restaurant|}}
          <option value='{{restaurant.name}}'>{{restaurant.name}}</option>
        {{/each}}
      </select>
    </div>

    <div class='form-field'>
      <label for='reviewFilter'>Review</label>
      <select id='reviewFilter' class='form-control'>
        <option>Choose review</option>
        {{#each review}}
          <option value='{{this.name}}'>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>
</div>