<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Raving Cravings</title>
    <link
      href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css'
      rel='stylesheet'
    />
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body onload="getApi()">
    <div class=''>
      <header class=''>
        <h1>
          <a href='/'>Raving Cravings</a>
        </h1>
        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a href='/profile'>profile</a>
            |
            <a href='/restaurant/'>Restaurant</a>
            <a href='/reviews'>Add A Review</a>
            <button class='' id='logout'>logout</button>
          {{else}}
            <a href='/login'>login</a>
          {{/if}}
        </nav>
      </header>
      <main class=''>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>
    <div id="list"></div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}

    <script src='/public/js/meal.js'></script>
  </body>

</html>