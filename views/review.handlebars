<div class='col-md-6'>
  <h3>Add a new review:</h3>

  <form class='form new-project-form'>
    <div class='form-group'>
      <label for='project-name'>Review Title:</label>
      <input
        class='form-input'
        type='text'
        id='project-name'
        name='project-name'
      />
    </div>
    <div class='form-group'>
      <label for='project-funding'>Description:</label>
      <input
        class='form-input'
        type='text'
        id='project-funding'
        name='project-funding'
      />
    </div>
    <div class='form-group'>
      <label for='project-funding'>Service:</label>
      <input
        class='form-input'
        type='text'
        id='project-funding'
        name='project-funding'
      />
    </div>
    <div class='form-group'>
      <label for='project-funding'>Taste:</label>
      <input
        class='form-input'
        type='text'
        id='project-funding'
        name='project-funding'
      />
    </div>
    <div class='form-group'>
      <label for='project-funding'>Quality:</label>
      <input
        class='form-input'
        type='text'
        id='project-funding'
        name='project-funding'
      />
    </div>
    <div class='form-group'>
      <label for='project-funding'>Description:</label>
      <input
        class='form-input'
        type='text'
        id='project-funding'
        name='project-funding'
      />
    </div>
    <div class='dropdownMenus col-md-12'>
      <div class='form-field'>
        <label for='restaurantFilter'>Restaurant</label>
        <select id='restaurantFilter' class='form-control'>
          <option>Choose restaurant</option>
          {{#each restaurants as |restaurant|}}
            <option value='{{restaurant.id}}'>{{restaurant.local}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class='form-group'>
      <button type='submit' class='btn btn-primary'>Create</button>
    </div>
  </form>
</div>